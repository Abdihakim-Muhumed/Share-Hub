<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharehub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareHub">
        <activity
            android:name=".ShareRoomMaterials"
            android:label="@string/title_activity_share_room_materials"
            android:theme="@style/Theme.ShareHub.NoActionBar"></activity>
        <activity android:name=".ShareRoom"></activity>
        <activity android:name=".JoinShareRoom" />
        <activity android:name=".CreateShareRoom" />
        <activity android:name=".authentication.PasswordReset" />
        <activity android:name=".Home" />
        <activity android:name=".authentication.SignUp" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>